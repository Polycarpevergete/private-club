<%= form_for(@post) do |f| %>
    
    <%= f.label :Enter_your_ID%> (ID : <%=current_user.id  %>)
    <%= f.number_field :user_id, class: 'form-control' %>

    <%= f.label :gossip %>
    <%= f.text_field :content, class: 'form-control' %>
  
    <%= f.submit yield(:button_text), class: "btn btn-danger" %>
  <% end %>